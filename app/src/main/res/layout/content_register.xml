<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    xmlns:livebutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:text=""
            android:textSize="15sp"

            app:met_baseColor="@android:color/black"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="?colorAccent"
            app:met_singleLineEllipsis="true"
            app:met_iconLeft="@drawable/material_email"
            android:id="@+id/email"
            android:textStyle="normal|bold"
            app:layout_constraintHorizontal_bias="0.63"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/username"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:text=""
            android:textSize="15sp"
            android:inputType="textPhonetic"

            app:met_baseColor="@android:color/black"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="?colorAccent"
            app:met_singleLineEllipsis="true"
            app:met_iconLeft="@drawable/material_username"
            android:id="@+id/username"
            android:textStyle="normal|bold"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_alignLeft="@+id/email"
            android:layout_alignStart="@+id/email">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:text=""
                android:textSize="15sp"
                android:inputType="textPersonName"

                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"
                app:met_singleLineEllipsis="true"
                app:met_iconLeft="@drawable/material_firstname"
                android:id="@+id/first_name"
                android:textStyle="normal|bold"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="104dp"
                android:layout_below="@+id/username"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1" />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Middle Name"
                android:text=""
                android:textSize="15sp"
                android:inputType="textPersonName"

                app:met_baseColor="@android:color/black"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?colorAccent"
                app:met_singleLineEllipsis="true"
                app:met_iconLeft="@drawable/material_middlename"
                android:id="@+id/middle_name"
                android:textStyle="normal|bold"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="104dp"
                android:layout_below="@+id/username"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1" />

        </LinearLayout>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:text=""
            android:textSize="15sp"
            android:inputType="textPersonName"

            app:met_baseColor="@android:color/black"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="?colorAccent"
            app:met_singleLineEllipsis="true"
            app:met_iconLeft="@drawable/material_last_name"
            android:id="@+id/last_name"
            android:textStyle="normal|bold"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="104dp"
            android:layout_below="@+id/username"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:text=""
            android:textSize="15sp"

            app:met_baseColor="@android:color/black"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="?colorAccent"
            app:met_singleLineEllipsis="true"
            app:met_iconLeft="@drawable/material_password"
            android:id="@+id/password"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/username"
            android:layout_alignStart="@+id/username"
            android:inputType="textPassword" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:text=""
            android:textSize="15sp"
            android:inputType="phone"

            app:met_baseColor="@android:color/black"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="?colorAccent"
            app:met_singleLineEllipsis="true"
            app:met_iconLeft="@drawable/material_phone"
            android:id="@+id/phone"
            android:textStyle="normal|bold"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="104dp"
            android:layout_below="@+id/username"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:baselineAligned="false">
            <com.hanks.library.AnimateCheckBox
                android:id="@+id/termsCheck"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:paddingLeft="15dp"
                app:animDuration="300"
                app:checkedColor="#00e5ff"
                app:lineColor="#fff"
                app:lineWidth="1.2dp"
                app:unCheckColor="#ff1500"/>

            <TextView
                android:text="@string/termsText"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                />
        </LinearLayout>
        <com.dd.morphingbutton.MorphingButton
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Get me in!"
            android:elevation="0dp"
            android:textStyle="normal|bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="53dp" />

    </TableLayout></ScrollView>
